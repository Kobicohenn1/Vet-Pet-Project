<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VetEditFAQ">

    <ImageView
        android:id="@+id/tvVetPet"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:paddingVertical="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" שאלות נפוצות לכלב - עריכה"
        android:layout_gravity="center"
        android:textSize="15dp"/>

    <Button
        android:text="מדוע הכלב לא אוכל את האוכל שלו?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:textColor="@color/white"
        android:id="@+id/btnDogEatEdit"
        android:textSize="11sp"
        />

    <Button
        android:text="איך לטפל בכוויות בכפות הרגליים?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:id="@+id/btnDogBurnEdit"
        android:textSize="11sp"
        />
    <Button
        android:text="מה הם הנהלים כשכלב נשך אדם?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:id="@+id/btnDogBitEdit"
        android:textSize="11sp"
        />

    <Button
        android:text="אילו טיפולים וטרינריים כלב עובר כגור?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:id="@+id/btnDogTreatmentsEdit"
        android:textSize="11sp"
        />

    <Button
        android:text="האם כדאי לסרס/לעקר את הכלב שלי?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:id="@+id/btnDogNeuteringEdit"
        android:textSize="11sp"
        />
    <Button
        android:text="מה היתרונות באילוף הכלב?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#599346"
        android:id="@+id/btnDogTrainEdit"
        android:textSize="11sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="שאלות נפוצות לחתול - עריכה"
        android:textSize="15dp" />

    <Button
        android:text="האם צריך לחסן חתולים?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:textColor="@color/white"
        android:id="@+id/btnCatVaccineEdit"
        android:textSize="11sp"
        />

    <Button
        android:text="האם מותר לרחוץ חתולים?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:id="@+id/btnCatWashEdit"
        android:textSize="11sp"
        />
    <Button
        android:text="מה זה מחלת שריטת החתול?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:id="@+id/btnCatMarchEdit"
        android:textSize="11sp"
        />

    <Button
        android:id="@+id/btnCatEatEdit"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:text="כמה פעמים ביום חתול צריך לאכול?"
        android:textSize="11sp" />

    <Button
        android:text="האם צריך לתת לגורי חתולים חלב?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:id="@+id/btnCatMilkEdit"
        android:textSize="11sp"
        />
    <Button
        android:text="מדוע החתול שלי לא עושה את צרכיו בארגז החול?"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#3E9168"
        android:id="@+id/btnCatPoopEdit"
        android:textSize="11sp"
        />
</LinearLayout>
