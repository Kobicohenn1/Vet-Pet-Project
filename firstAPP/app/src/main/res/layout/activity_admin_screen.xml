<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="      Welcome To "
            android:layout_gravity="center"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:paddingVertical="100dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center"
        android:text="Welcome Admin "
        android:textSize="16dp"
        />

    <Button
        android:text="מאגר הוטרינרים"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:textColor="@color/white"
        android:id="@+id/btnVets"
        android:textSize="15sp"
        />

    <Button
        android:text="מאגר הלקוחות"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnUsers"
        android:textSize="15sp"
        />
    <Button
        android:text="פרופילי הוטרינרים"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnVetProfile"
        android:textSize="15sp"
        />

    <Button
        android:text="עריכת שאלות ותשובות"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnEditQAadmin"
        android:textSize="15sp"
        />

    <Button
        android:text="עריכת - אורח חיים בריא "
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnHealthEdit"
        android:textSize="15sp"
        />
    <Button
        android:text="אישור וטרינרים חדשים"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnNewVets"
        android:textSize="15sp"
        />

    <Button
        android:text="שלח התראה"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnNotfication"
        android:textSize="15sp"
        />
    <Button
        android:text="הוספת פרסומת"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnAddP"
        android:textSize="15sp"
        />

    <Button
        android:text="שלח התראה"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:backgroundTint="#5A5656"
        android:id="@+id/btnPush"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btnLogOutAdmin"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#A61717"
        android:text="Log Out"
        android:textSize="15dp" />



</LinearLayout>